{
  "manifest_version": 3,
  "name": "MeetOps Recorder",
  "version": "1.0",
  "permissions": [
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}